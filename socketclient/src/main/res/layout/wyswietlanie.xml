<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#555555">

    <RelativeLayout
        android:layout_width="337dp"
        android:layout_height="fill_parent"
        android:rowCount="5"
        android:columnCount="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-wygaszacz po:"
            android:id="@+id/textView"
            android:layout_column="0"
            android:textColor="@color/infoAuthorTxT"
            android:layout_row="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wyswietlanieCzasSpinner"
            android:layout_column="2"
            android:spinnerMode="dialog"
            style="@style/AppTheme"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-typ:"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:textColor="@color/infoAuthorTxT"
            android:layout_row="2"
            android:layout_below="@+id/wyswietlanieCzasSpinner"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wyswietlanieTypSpinner"
            android:spinnerMode="dialog"
            android:layout_below="@+id/wyswietlanieCzasSpinner"
            android:layout_alignRight="@+id/wyswietlanieCzasSpinner" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeWyswietlanie"
            android:background="@drawable/ic_list_remove"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
</LinearLayout>